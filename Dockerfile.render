# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Копируем package files
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем исходный код
COPY . .

# Собираем Next.js приложение
RUN npm run build

# Stage 2: Production
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production
ENV HOSTNAME=0.0.0.0
# PORT is set by Render automatically (default 10000)

# Создаем пользователя для безопасности (опционально, можно закомментировать)
# RUN addgroup --system --gid 1001 nodejs
# RUN adduser --system --uid 1001 nextjs

# Копируем необходимые файлы из builder
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/server-render.js ./server.js
COPY --from=builder /app/next.config.ts ./

# Не переключаемся на непривилегированного пользователя (Render может иметь проблемы)
# USER nextjs

# Render sets PORT via env var (default 10000)
EXPOSE 10000

# Запускаем приложение
CMD ["node", "server.js"]
